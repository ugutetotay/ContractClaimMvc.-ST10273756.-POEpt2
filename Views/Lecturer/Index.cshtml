@model List<Claim>
@{
    ViewData["Title"] = "My Claims";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="text-danger">My Claims</h2>
        <a href="/Lecturer/Submit" class="btn btn-danger">Submit New Claim</a>
    </div>

    @if (!Model.Any())
    {
        <div class="alert alert-info">
            You haven't submitted any claims yet.
            <a href="/Lecturer/Submit" class="alert-link">Submit your first claim</a>
        </div>
    }
    else
    {
        <div class="table-responsive">
            <table class="table table-striped">
                <thead class="table-dark">
                    <tr>
                        <th>Date</th>
                        <th>Hours</th>
                        <th>Rate</th>
                        <th>Total</th>
                        <th>Status</th>
                        <th>Document</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var claim in Model)
                    {
                        <tr>
                            <td>@claim.SubmittedDate.ToString("MMM dd, yyyy")</td>
                            <td>@claim.HoursWorked</td>
                            <td>R @claim.HourlyRate</td>
                            <td class="fw-bold text-success">R @claim.TotalAmount</td>
                            <td>
                                <span class="badge @(claim.Status == "Approved" ? "bg-success" : claim.Status == "Rejected" ? "bg-danger" : "bg-warning")">
                                    @claim.Status
                                </span>
                            </td>
                            <td>
                                @if (!string.IsNullOrEmpty(claim.DocumentPath))
                                {
                                    <a href="/Lecturer/DownloadFile?fileName=@claim.DocumentPath" class="btn btn-sm btn-outline-danger">
                                        Download
                                    </a>
                                }
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
</div>