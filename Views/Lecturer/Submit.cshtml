@model Claim
@{
    ViewData["Title"] = "Submit Claim";
}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card">
                <div class="card-header bg-danger text-white">
                    <h4 class="mb-0">Submit New Claim</h4>
                </div>
                <div class="card-body">
                    <form method="post" enctype="multipart/form-data">
                        <div class="row">
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label class="form-label">Hours Worked *</label>
                                    <input asp-for="HoursWorked" type="number" class="form-control" min="1" max="200" required>
                                </div>
                                <div class="mb-3">
                                    <label class="form-label">Work Description</label>
                                    <textarea asp-for="Notes" class="form-control" rows="3"></textarea>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label class="form-label">Supporting Document</label>
                                    <input asp-for="DocumentFile" type="file" class="form-control">
                                </div>
                                <div class="card bg-light">
                                    <div class="card-body">
                                        <h6>Claim Summary:</h6>
                                        <p class="mb-1">Your Hourly Rate: R <span id="userRate">0</span></p>
                                        <p class="mb-1">Hours: <span id="hoursDisplay">0</span></p>
                                        <p class="mb-0 fw-bold">Total: R <span id="totalDisplay">0</span></p>
                                    </div>
                                </div>
                                <button type="submit" class="btn btn-danger w-100 mt-3 btn-lg">Submit Claim</button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script>
        // Real-time calculation using Micro API
        $('#HoursWorked').on('input', function() {
            const hours = $(this).val();
            const lecturerId = @Context.Session.GetInt32("UserId");

            $.get(`/api/claims/calculate?lecturerId=${lecturerId}&hoursWorked=${hours}`, function(total) {
                $('#totalDisplay').text(total.toFixed(2));
            });

            $('#hoursDisplay').text(hours);
        });

        // Get user's hourly rate on page load
        $(document).ready(function() {
            const lecturerId = @Context.Session.GetInt32("UserId");
            $.get(`/api/claims/lecturer/${lecturerId}`, function(claims) {
                if (claims.length > 0) {
                    $('#userRate').text(claims[0].hourlyRate);
                }
            });
        });
    </script>
}