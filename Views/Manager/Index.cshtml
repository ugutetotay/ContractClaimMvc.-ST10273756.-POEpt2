@model List<Claim>
@{
    ViewData["Title"] = "All Claims Overview";
}

<div class="container mt-4">
    <h2 class="text-danger mb-4">All Claims Overview</h2>

    <div class="row mb-4">
        <div class="col-md-3">
            <div class="card bg-primary text-white">
                <div class="card-body text-center">
                    <h4>@Model.Count</h4>
                    <p>Total Claims</p>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card bg-warning text-dark">
                <div class="card-body text-center">
                    <h4>@Model.Count(c => c.Status == "Pending")</h4>
                    <p>Pending</p>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card bg-success text-white">
                <div class="card-body text-center">
                    <h4>@Model.Count(c => c.Status == "Approved")</h4>
                    <p>Approved</p>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card bg-danger text-white">
                <div class="card-body text-center">
                    <h4>R @Model.Where(c => c.Status == "Approved").Sum(c => c.TotalAmount)</h4>
                    <p>Total Approved</p>
                </div>
            </div>
        </div>
    </div>

    <div class="table-responsive">
        <table class="table table-striped">
            <thead class="table-dark">
                <tr>
                    <th>Lecturer</th>
                    <th>Hours</th>
                    <th>Total</th>
                    <th>Status</th>
                    <th>Submitted</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var claim in Model)
                {
                    <tr>
                        <td>@claim.LecturerName</td>
                        <td>@claim.HoursWorked</td>
                        <td>R @claim.TotalAmount</td>
                        <td>
                            <span class="badge @(claim.Status == "Approved" ? "bg-success" : claim.Status == "Rejected" ? "bg-danger" : "bg-warning")">
                                @claim.Status
                            </span>
                        </td>
                        <td>@claim.SubmittedDate.ToString("MMM dd, yyyy")</td>
                        <td>
                            @if (claim.Status == "Pending")
                            {
                                <form method="post" action="/Manager/ApproveClaim" class="d-inline">
                                    <input type="hidden" name="id" value="@claim.ClaimId">
                                    <button type="submit" class="btn btn-sm btn-success">Approve</button>
                                </form>
                            }
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>