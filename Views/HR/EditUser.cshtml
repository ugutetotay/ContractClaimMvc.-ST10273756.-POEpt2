@model User
@{
    ViewData["Title"] = "Edit User";
}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card">
                <div class="card-header bg-warning text-white">
                    <h4 class="mb-0">Edit User - @Model.FullName</h4>
                </div>
                <div class="card-body">
                    @if (!ViewData.ModelState.IsValid)
                    {
                        <div class="alert alert-danger">
                            @Html.ValidationSummary()
                        </div>
                    }

                    <form method="post">
                        <input type="hidden" asp-for="Id" />
                        <input type="hidden" asp-for="CreatedDate" />

                        <div class="mb-3">
                            <label class="form-label">Employee ID</label>
                            <input asp-for="EmployeeId" class="form-control" readonly>
                        </div>

                        <div class="mb-3">
                            <label class="form-label">Full Name *</label>
                            <input asp-for="FullName" class="form-control" required>
                        </div>

                        <div class="mb-3">
                            <label class="form-label">Email *</label>
                            <input asp-for="Email" type="email" class="form-control" required>
                        </div>

                        <div class="mb-3">
                            <label class="form-label">Role</label>
                            <select asp-for="Role" class="form-control" id="roleSelect">
                                <option value="Lecturer">Lecturer</option>
                                <option value="Coordinator">Coordinator</option>
                                <option value="Manager">Manager</option>
                            </select>
                        </div>

                        <div class="mb-3" id="hourlyRateSection">
                            <label class="form-label">Hourly Rate (R)</label>
                            <input asp-for="HourlyRate" type="number" class="form-control" min="0" max="1000" step="0.01">
                        </div>

                        <div class="mb-3">
                            <label class="form-label">Department</label>
                            <input asp-for="Department" class="form-control" required>
                        </div>

                        <div class="mb-3">
                            <label class="form-label">Password *</label>
                            <input asp-for="Password" type="password" class="form-control" required>
                            <small class="text-muted">Enter new password or keep current one</small>
                        </div>

                        <div class="mb-3 form-check">
                            <input asp-for="IsActive" class="form-check-input">
                            <label class="form-check-label">Active User</label>
                        </div>

                        <div class="d-flex gap-2">
                            <button type="submit" class="btn btn-warning">Update User</button>
                            <a href="/HR/Index" class="btn btn-secondary">Cancel</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script>
        $(document).ready(function() {
            function toggleHourlyRate() {
                const isLecturer = $('#roleSelect').val() === 'Lecturer';
                $('#hourlyRateSection').toggle(isLecturer);
            }

            $('#roleSelect').change(toggleHourlyRate);
            toggleHourlyRate();
        });
    </script>
}