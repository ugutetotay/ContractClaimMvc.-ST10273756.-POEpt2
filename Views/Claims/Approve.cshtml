@model List<Claim>
@{
    ViewData["Title"] = "Approve Claims";
}

<div class="container mt-4">
    <h2 class="text-primary">Approve Claims</h2>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success">@TempData["SuccessMessage"]</div>
    }

    @if (!Model.Any())
    {
        <div class="alert alert-info">No pending claims to approve.</div>
    }

    @foreach (var claim in Model)
    {
        <div class="card mb-3">
            <div class="card-header">
                <strong>@claim.LecturerName</strong> - Submitted: @claim.SubmittedDate.ToString("MMM dd, yyyy")
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-md-6">
                        <p><strong>Hours:</strong> @claim.HoursWorked</p>
                        <p><strong>Rate:</strong> R @claim.HourlyRate</p>
                        <p><strong>Total:</strong> R @claim.TotalAmount</p>
                    </div>
                    <div class="col-md-6">
                        <p><strong>Notes:</strong> @claim.Notes</p>
                        @if (!string.IsNullOrEmpty(claim.DocumentPath))
                        {
                            <p><strong>Document:</strong> <a href="/documents/@claim.DocumentPath" target="_blank">View File</a></p>
                        }
                    </div>
                </div>
                <div class="mt-3">
                    <form asp-action="ApproveClaim" method="post" class="d-inline">
                        <input type="hidden" name="id" value="@claim.ClaimId" />
                        <button type="submit" class="btn btn-success">Approve</button>
                    </form>
                    <form asp-action="RejectClaim" method="post" class="d-inline">
                        <input type="hidden" name="id" value="@claim.ClaimId" />
                        <button type="submit" class="btn btn-danger">Reject</button>
                    </form>
                </div>
            </div>
        </div>
    }
</div>